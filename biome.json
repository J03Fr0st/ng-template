{
	"$schema": "https://biomejs.dev/schemas/2.3.6/schema.json",
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"files": {
		"includes": ["**/*", "!dist/**/*", "!node_modules/**/*"]
	}
}
